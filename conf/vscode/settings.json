{
  "git.autofetch": true,
  "git.confirmSync": false,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "terminal.integrated.fontFamily": "MesloLGS NF, MesloLGS-NF-Regular, 'MesloLGS NF Regular', Menlo, Monaco, 'Courier New'",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.allowLigatures": true,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {
    "XDG_CONFIG_HOME": "$HOME/sbrn/sys/config",
    "XDG_DATA_HOME": "$HOME/sbrn/sys/local/share",
    "XDG_STATE_HOME": "$HOME/sbrn/sys/local/state", 
    "XDG_CACHE_HOME": "$HOME/sbrn/sys/cache"
  },
  "workbench.settings.editor": "json",  
  "workbench.iconTheme": "a-file-icon-vscode",
  "workbench.productIconTheme": "a-file-icon-vscode-product-icon-theme",
  "explorer.confirmDelete": false,
  "extensions.autoUpdate": true,
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "files.defaultLanguage": "markdown",
  "tabnine.experimentalAutoImports": true,
  "redhat.telemetry.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "chat.agent.maxRequests": 50,
  "terminal.integrated.suggest.enabled": true,
  "[java]": {
    "editor.suggest.snippetsPreventQuickSuggestions": false
  },
  "git.enableSmartCommit": true,
  "git.path": "/opt/homebrew/bin/git",
  "git.defaultCloneDirectory": "~/sbrn/proj/exp",
  "window.confirmSaveUntitledWorkspace": false,
  "chat.tools.terminal.autoApprove": {
    "./validate-gitea.sh": true,
    "curl -f http://localhost:7080/ | head -20": {
      "approve": true,
      "matchCommandLine": true
    },
    "docker-compose": true,
    "gh": true,
    "coder": true,
    "docker": true,
    "whoami": true,
    "lsof": true,
    "git": true,
    "hugo": true,
    "npm": true,
    "make": true
  },
  "remote.SSH.connectTimeout": 1800,
  "diffEditor.renderSideBySide": false,
  "workbench.colorTheme": "Darkerized Better Solarized Dark",
  "chat.mcp.gallery.enabled": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "workbench.editor.enablePreview": false,
  "security.workspace.trust.untrustedFiles": "open"
}
