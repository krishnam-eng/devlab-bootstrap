{
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "terminal.integrated.fontFamily": "MesloLGS NF, MesloLGS-NF-Regular, 'MesloLGS NF Regular', Menlo, Monaco, 'Courier New'",
